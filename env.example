#######################################
# 🔐 Seguridad de la instancia
#######################################

# Clave secreta para cifrar datos (mínimo 32 caracteres)
ENCRYPTION_KEY=REEMPLAZA_ESTO_POR_UNA_CLAVE_SEGURA_GENERADA

# Habilita autenticación en el panel de n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=REEMPLAZA_ESTO_POR_OTRA_CLAVE_SEGURA

#######################################
# 🐘 PostgreSQL (Base de datos)
#######################################

POSTGRES_USER=n8n
POSTGRES_PASSWORD=REEMPLAZA_ESTO_POR_CLAVE_POSTGRES_SEGURA
POSTGRES_DB=n8n

#######################################
# 🌐 Dominio público
#######################################

# Dominio donde se accederá a n8n (usa localhost si estás en desarrollo)
# Si se deja vacío, se usará localhost por defecto en docker-compose
N8N_DOMAIN=n8n.midominio.com

# Protocolo: puede ser http (desarrollo) o https (producción con proxy)
N8N_PROTOCOL=https

#######################################
# 🧠 Avanzado / Otros (opcional)
#######################################

# Webhook URL base (opcional si ya usas N8N_DOMAIN)
# N8N_WEBHOOK_URL=https://n8n.midominio.com/

# Clave de API (si habilitas acceso por token en la API pública)
# N8N_API_KEY=REEMPLAZA_ESTO_POR_TOKEN_UNICO

# Control de ejecución
# N8N_LOG_LEVEL=info
# N8N_METRICS=true
# EXECUTIONS_MODE=queue
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_HEALTH_CHECK_ACTIVE=true

